# Environment Variables for Tickety App
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your_secret_key_here

# Email Service (Resend.com)
RESEND_API_KEY=re_your_resend_api_key_here

# Google Cloud Vision API (for OCR)
GOOGLE_APPLICATION_CREDENTIALS_JSON={"type":"service_account","project_id":"your_project","private_key_id":"..."}

# Deployment Environment (automatically set by platforms)
# VERCEL=1  # Set automatically by Vercel
# PORT=5000 # Set automatically by deployment platforms
